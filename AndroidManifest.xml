<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tom.hci.parkingmeter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black">
        <activity
            android:name="tom.hci.parkingmeter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tom.hci.parkingmeter.BuyActivity"
            android:label="@string/title_activity_buy"
            android:parentActivityName="tom.hci.parkingmater.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tom.hci.parkingmater.MainActivity" />
        </activity>
        <activity
            android:name="tom.hci.parkingmeter.RefundTicket"
            android:label="@string/title_activity_refund_ticket" >
        </activity>
        <activity
            android:name="tom.hci.parkingmeter.DonateTicket"
            android:label="@string/title_activity_donate_ticket" >
        </activity>
        <activity
            android:name="tom.hci.parkingmeter.Payment"
            android:label="@string/title_activity_payment" >
        </activity>
    </application>

</manifest>
